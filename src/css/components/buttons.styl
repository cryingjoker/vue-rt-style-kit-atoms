.{newAppName}-button-white
  border 2px solid white

  &:hover
    @media (hover hover)
      background-color b2c-cool-grey05
      opacity .7

    .{newAppName}-dark-theme &,
    &.{newAppName}-button-bright
      background-color b2c-white01

  &:active
    background-color transparent

  &[disabled]
    color main-color05
    background-color transparent
    opacity 1

    .{newAppName}-dark-theme &,
    &.{newAppName}-button-bright
      color b2c-white05
      background-color transparent
      border-color b2c-white01

    &:hover
      @media (hover hover)
        background-color transparent

    .ripple-wave
      background-color b2c-cool-grey


