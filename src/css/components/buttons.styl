.{newAppName}-button--as-tag
  width auto
  min-width auto
  height auto
  color white
  font-size 12px
  background-color b2c-purple-high
  border-radius 10px
  padding-top 3px
  padding-bottom 3px
  padding-left 10px
  padding-right 10px

  .ripple
    width auto
    padding 0

