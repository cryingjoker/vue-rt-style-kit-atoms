.select-v2
  width: 100%
.select-v2__inner
  height: 48px
  position: relative;
  border-bottom: 2px solid main-color01
  display flex
  align-items flex-end
  width: 100%
  text-align left
  &:before,
  &:after
    content ''
    position: absolute;
    bottom: -2px
    height: 2px

    opacity: 1
    width: 0
    display: block
    left: 0
    right: 0
    transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
    transition-duration 0.25s
    transition-property opacity, background-color, width
  &:before
    background-color: main-color03
    z-index 1
    .select-v2:hover &
      width 100%
  &:after
    background-color: b2c-purple
    z-index 2
    .select-v2--is-open &
      width 100%
.select-v2-arrow.rt-sys-icon
  position: absolute;
  right: 0
  bottom: 12px
  opacity: 0.5
  transform rotate(0deg)
  transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  transition-duration 0.25s
  transition-property opacity, transform, fill
  .select-v2--is-open &
    opacity: 1
    transform rotate(180deg)
.select-v2-label
  position: absolute;
  left: 0
  bottom: 12px
  font-size 16px
  transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  color main-color07
  transition-duration 0.25s
  transition-property transform, opacity
  transform-origin: left bottom;

.select-v2--is-open .select-v2-label,
.select-v2-label--up
  transform: scale(0.75) translateY(-18px);
.select-v2--is-open .select-v2-label
  color b2c-purple
.select-v2-value
  font-size 16px
  line-height: 24px
  margin-bottom: 1px

.select-v2-list
  opacity 0
  pointer-events none
  position: absolute;
  left: 0
  right: 0
  margin-top: 2px
  padding-left: 16px
  padding-right: 16px

  background-color: b2c-white
  box-shadow: 0px 0px 1px rgba(28, 41, 61, 0.1), 0px 36px 36px rgba(28, 41, 61, 0.1);
  transition-duration 0.25s
  transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  transition-property opacity
  z-index 10
  .checkbox,
  .checkbox .ripple
    height: 20px
  .select-v2--is-open &
    opacity: 1
    pointer-events auto

.select-v2-list-inner
  max-height 250px
  overflow: auto;
  padding-bottom: 20px
  padding-top: 20px

.select-v2-tag
  display: inline-block
  background-color: main-color01
  padding-left: 4px
  padding-top: 0px
  padding-bottom: 0px
  padding-right: 4px
  display: flex
  align-items center
  margin-right: 4px
  font-size 12px
  line-height 16px
  margin-bottom: 4px
  cursor: pointer
.rt-sys-icon.select-v2-tag__remove
  min-width 19px
  width: 19px!important
  height: 19px!important
  fill main-color05
.select-v2-tag:hover .rt-sys-icon.select-v2-tag__remove
  fill main-color07
.select-v2-list-shadow-up
  height: 20px
  background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);
  left: 0
  top: 0
  right: 0
  position: absolute;
.select-v2-list-shadow-down
  position: absolute;
  left: 0
  right: 0
  bottom: 0
  height: 40px
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);
.select-v2-option
  width: 100%
  display: flex
  align-items center
  font-size 14px
  padding-top: 6px
  padding-bottom: 6px
  padding-left: 8px
  padding-right: 8px
  text-align left
  transition-duration 0.25s
  transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  transition-property background-color, color
  cursor: pointer;
  &:hover,
  &.select-v2-option--focus
    background-color: main-color005
.select-v2-option--select
  color b2c-purple