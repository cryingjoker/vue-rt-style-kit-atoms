colors = readJsonKeys('../../../color.json')

renderColorClass(classname, var, media)
  if media == 'desktop'
    .{classname}
      stroke lookup(var)
    .{replace(classname, 'stroke-color-','dark-theme-stroke-color-')}
      .{newAppName}-dark-theme &
        stroke lookup(var)
  if media == 'tablet'
    @media (max-width: tablet-upper-limit)
      .{replace(classname, 'stroke-color-','stroke-color-td-')}
        stroke lookup(var)
      .{replace(classname, 'stroke-color-','dark-theme-stroke-color-td-')}
        .{newAppName}-dark-theme &
          stroke lookup(var)
  if media == 'mobile'
    @media (max-width: mobile-upper-limit)
      .{replace(classname, 'stroke-color-','stroke-color-md-')}
        stroke lookup(var)
      .{replace(classname, 'stroke-color-','dark-theme-stroke-color-md-')}
        .{newAppName}-dark-theme &
          stroke lookup(var)
for $type in ('desktop' 'tablet' 'mobile')
  for $i in colors
    if search($i,'b2c') >= 0
      className = 'stroke-color-'+replace($i,'b2c-','')
      renderColorClass(className, $i, $type)

    else
      if search($i,'main-') == 0
        className = 'stroke-color-'+replace($i,'-color','')
        renderColorClass(className, $i, $type)

.color-main-md-white
  color main-color
  @media(max-width mobile-upper-limit)
    color b2c-white

.color-white-md-main
  color b2c-white
  @media(max-width mobile-upper-limit)
    color main-color

